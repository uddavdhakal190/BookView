<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardViewStyle">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/colorCard</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorButton</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="TitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="SubtitleText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>
</resources> 